            // Firebase Auth State Observer
            onAuthStateChanged(window.auth, (user) => {
                firebaseUser = user;
                if (user) {
                    loadUserData(user.uid);
                }
            });

            async function loadUserData(uid) {
                const userDoc = await getDoc(doc(window.db, 'users', uid));
                if (userDoc.exists()) {
                    const userData = { id: uid, ...userDoc.data() };
                    
                    const existingIndex = savedAccounts.findIndex(a => a.id === uid);
                    if (existingIndex >= 0) {
                        savedAccounts[existingIndex] = { ...userData, isActive: true };
                    } else {
                        savedAccounts.forEach(a => a.isActive = false);
                        savedAccounts.push({ ...userData, isActive: true });
                    }
                    
                    currentUser = userData;
                    localStorage.setItem('streamxAccounts', JSON.stringify(savedAccounts));
                    updateAuthButton();
                }
            }

            async function signInWithGoogle() {
                try {
                    const result = await signInWithPopup(window.auth, window.googleProvider);
                    const user = result.user;
                    
                    const userRef = doc(window.db, 'users', user.uid);
                    const userDoc = await getDoc(userRef);
                    
                    if (!userDoc.exists()) {
                        await addDoc(collection(window.db, 'users'), {
                            userId: user.uid,
                            name: user.displayName || 'User',
                            email: user.email,
                            profile_picture: user.photoURL || null,
                            bio: '',
                            website_url: '',
                            whatsapp: '',
                            facebook: '',
                            instagram: '',
                            contact_email: '',
                            created_date: new Date().toISOString()
                        });
                    }
                    
                    closeAuthModal();
                    showToast('Signed in with Google!', 'success');
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            }

            function showForgotPassword() {
                document.getElementById('loginView').style.display = 'none';
                document.getElementById('registerView').style.display = 'none';
                document.getElementById('forgotPasswordView').style.display = 'block';
                lucide.createIcons();
            }

            document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = document.getElementById('forgotEmail').value;
                
                try {
                    await sendPasswordResetEmail(window.auth, email);
                    showToast('Password reset email sent! Check your inbox.', 'success');
                    showLoginView();
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            function makeLinksClickable(text) {
                if (!text) return '';
                const urlRegex = /(https?:\/\/[^\s]+)/g;
                return text.replace(urlRegex, '<a href__="$1" target="_blank" rel="noopener noreferrer">$1</a>');
            }

            function handleAuthButtonClick() {
                if (savedAccounts.length > 1) {
                    openAccountSwitcher();
                } else if (currentUser) {
                    viewUserProfile(currentUser.id);
                } else {
                    openAuthModal();
                }
            }

            function openAccountSwitcher() {
                renderAccountList();
                document.getElementById('accountSwitcher').classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            function closeAccountSwitcher() {
                document.getElementById('accountSwitcher').classList.remove('active');
                document.body.style.overflow = '';
            }

            function renderAccountList() {
                const accountListEl = document.getElementById('accountList');
                
                let html = savedAccounts.map(account => {
                    const isActive = account.id === currentUser?.id;
                    const avatarHTML = account.profile_picture 
                        ? `<img src="${account.profile_picture}" alt="${account.name}">` 
                        : account.name[0];

                    return `
                        <div class="account-item ${isActive ? 'active-account' : ''}" onclick="switchAccount('${account.id}')">
                            ${isActive ? '<div class="account-badge"><i data-lucide="check" style="width: 12px; height: 12px;"></i> Active</div>' : ''}
                            <div class="account-avatar">${avatarHTML}</div>
                            <div class="account-info">
                                <div class="account-name">${account.name}</div>
                                <div class="account-email">${account.email}</div>
                            </div>
                            <button class="account-remove" onclick="event.stopPropagation(); removeAccount('${account.id}')">
                                <i data-lucide="trash-2"></i>
                            </button>
                        </div>
                    `;
                }).join('');

                html += `
                    <button class="add-account-btn" onclick="addNewAccount()">
                        <i data-lucide="user-plus"></i>
                        <span>Add Another Account</span>
                    </button>
                `;

                accountListEl.innerHTML = html;
                lucide.createIcons();
            }

            function switchAccount(accountId) {
                const account = savedAccounts.find(a => a.id === accountId);
                if (!account) return;

                savedAccounts.forEach(a => a.isActive = false);
                account.isActive = true;
                currentUser = account;
                
                localStorage.setItem('streamxAccounts', JSON.stringify(savedAccounts));
                
                updateAuthButton();
                closeAccountSwitcher();
                showToast(`Switched to ${account.name}`, 'success');
            }

            function removeAccount(accountId) {
                if (!confirm('Remove this account?')) return;

                const index = savedAccounts.findIndex(a => a.id === accountId);
                if (index === -1) return;

                const wasActive = savedAccounts[index].id === currentUser?.id;
                savedAccounts.splice(index, 1);
                
                if (wasActive) {
                    currentUser = savedAccounts.length > 0 ? savedAccounts[0] : null;
                    if (currentUser) currentUser.isActive = true;
                }

                localStorage.setItem('streamxAccounts', JSON.stringify(savedAccounts));
                updateAuthButton();
                
                if (savedAccounts.length <= 1) {
                    closeAccountSwitcher();
                } else {
                    renderAccountList();
                }

                showToast('Account removed', 'info');
            }

            function addNewAccount() {
                closeAccountSwitcher();
                openAuthModal();
            }

            function openAuthModal() {
                document.getElementById('authModal').classList.add('active');
                document.body.style.overflow = 'hidden';
                lucide.createIcons();
            }

            function closeAuthModal() {
                document.getElementById('authModal').classList.remove('active');
                document.body.style.overflow = '';
            }

            function showLoginView() {
                document.getElementById('loginView').style.display = 'block';
                document.getElementById('registerView').style.display = 'none';
                document.getElementById('forgotPasswordView').style.display = 'none';
                lucide.createIcons();
            }

            function showRegisterView() {
                document.getElementById('loginView').style.display = 'none';
                document.getElementById('registerView').style.display = 'block';
                document.getElementById('forgotPasswordView').style.display = 'none';
                lucide.createIcons();
            }

            function updateAuthButton() {
                const authBtn = document.getElementById('authBtn');
                if (currentUser) {
                    if (currentUser.profile_picture) {
                        authBtn.innerHTML = `<img src="${currentUser.profile_picture}" alt="${currentUser.name}">`;
                        if (deletedArticlesCount > 0) {
                            authBtn.innerHTML += `<span id="notificationBadge" class="notification-badge">${deletedArticlesCount}</span>`;
                        }
                    } else {
                        authBtn.innerHTML = `<div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple)); display: flex; align-items: center; justify-content: center; font-size: 14px; font-weight: 700; color: white;">${currentUser.name[0]}</div>`;
                        if (deletedArticlesCount > 0) {
                            authBtn.innerHTML += `<span id="notificationBadge" class="notification-badge">${deletedArticlesCount}</span>`;
                        }
                    }
                    authBtn.title = currentUser.name;
                } else {
                    authBtn.innerHTML = `<i data-lucide="log-in"></i>`;
                    authBtn.title = "Login";
                }
                lucide.createIcons();
            }

            async function logout() {
                if (savedAccounts.length > 1) {
                    if (confirm('Remove this account from this device?')) {
                        removeAccount(currentUser.id);
                    }
                } else {
                    await signOut(window.auth);
                    currentUser = null;
                    firebaseUser = null;
                    savedAccounts = [];
                    localStorage.setItem('streamxAccounts', JSON.stringify(savedAccounts));
                    updateAuthButton();
                    showToast('Logged out successfully!', 'success');
                }
                closeProfileModal();
            }

            async function viewUserProfile(userId) {
                const isDefaultUser = userId === 'default';
                
                if (isDefaultUser) {
                    const defaultUser = {
                        name: 'StreamX News',
                        email: 'team@streamxnews.com',
                        bio: 'Official StreamX News account bringing you the latest updates.',
                        profile_picture: null
                    };
                    
                    displayProfileData(defaultUser, userId, true);
                } else {
                    const usersSnapshot = await getDocs(collection(window.db, 'users'));
                    let userData = null;
                    usersSnapshot.forEach(doc => {
                        if (doc.id === userId || doc.data().userId === userId) {
                            userData = { id: doc.id, ...doc.data() };
                        }
                    });
                    if (userData) {
                        displayProfileData(userData, userId, false);
                    }
                }
            }

            function closeProfileModal() {
                document.getElementById('profileModal').classList.remove('active');
                document.body.style.overflow = '';
                deletedArticlesCount = 0;
                updateAuthButton();
            }

            function showEditProfile() {
                const editAvatar = document.getElementById('editProfileAvatar');
                const editInitial = document.getElementById('editProfileInitial');
                
                if (currentUser.profile_picture) {
                    editAvatar.innerHTML = `<img src="${currentUser.profile_picture}" alt="${currentUser.name}">
                        <div class="profile-picture-upload" onclick="document.getElementById('profilePictureInput').click()">
                            <i data-lucide="camera"></i>
                        </div>`;
                } else {
                    editInitial.textContent = currentUser.name[0];
                    editAvatar.innerHTML = '';
                    editAvatar.appendChild(editInitial);
                    editAvatar.innerHTML += `<div class="profile-picture-upload" onclick="document.getElementById('profilePictureInput').click()">
                            <i data-lucide="camera"></i>
                        </div>`;
                }
                
                document.getElementById('editName').value = currentUser.name;
                document.getElementById('editBio').value = currentUser.bio || '';
                document.getElementById('editWebsite').value = currentUser.website_url || '';
                document.getElementById('editWhatsapp').value = currentUser.whatsapp || '';
                document.getElementById('editFacebook').value = currentUser.facebook || '';
                document.getElementById('editInstagram').value = currentUser.instagram || '';
                document.getElementById('editContactEmail').value = currentUser.contact_email || '';
                
                document.getElementById('viewProfile').style.display = 'none';
                document.getElementById('editProfile').style.display = 'block';
                lucide.createIcons();
            }

            function cancelEditProfile() {
                document.getElementById('viewProfile').style.display = 'block';
                document.getElementById('editProfile').style.display = 'none';
                currentProfilePicture = null;
            }

            document.getElementById('profilePictureInput').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (!file) return;
                
                if (file.size > 5 * 1024 * 1024) {
                    showToast('Image size must be less than 5MB', 'error');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(event) {
                    currentProfilePicture = event.target.result;
                    const editAvatar = document.getElementById('editProfileAvatar');
                    editAvatar.innerHTML = `<img src="${currentProfilePicture}" alt="Profile">
                        <div class="profile-picture-upload" onclick="document.getElementById('profilePictureInput').click()">
                            <i data-lucide="camera"></i>
                        </div>`;
                    lucide.createIcons();
                };
                reader.readAsDataURL(file);
            });

            function displayProfileData(userData, userId, isDefault) {
                const profileAvatar = document.getElementById('profileAvatarLarge');
                const profileInitial = document.getElementById('profileInitial');
                
                if (userData.profile_picture) {
                    profileAvatar.innerHTML = `<img src="${userData.profile_picture}" alt="${userData.name}">`;
                } else {
                    profileInitial.textContent = userData.name[0];
                    profileAvatar.innerHTML = '';
                    profileAvatar.appendChild(profileInitial);
                }
                
                document.getElementById('profileName').textContent = userData.name;
                document.getElementById('profileEmail').textContent = userData.email;
                document.getElementById('profileBio').textContent = userData.bio || 'No bio yet';

                const socialLinksContainer = document.getElementById('profileSocialLinks');
                let socialLinksHTML = '';
                
                if (userData.website_url) {
                    socialLinksHTML += `
                        <div class="social-link-item">
                            <i data-lucide="globe"></i>
                            <a href__="${userData.website_url}" target="_blank">${userData.website_url}</a>
                        </div>`;
                }
                if (userData.whatsapp) {
                    socialLinksHTML += `
                        <div class="social-link-item">
                            <i data-lucide="phone"></i>
                            <a href__="https://wa.me/${userData.whatsapp.replace(/[^0-9]/g, '')}" target="_blank">${userData.whatsapp}</a>
                        </div>`;
                }
                if (userData.facebook) {
                    socialLinksHTML += `
                        <div class="social-link-item">
                            <i data-lucide="facebook"></i>
                            <a href__="https://facebook.com/${userData.facebook}" target="_blank">@${userData.facebook}</a>
                        </div>`;
                }
                if (userData.instagram) {
                    socialLinksHTML += `
                        <div class="social-link-item">
                            <i data-lucide="instagram"></i>
                            <a href__="https://instagram.com/${userData.instagram.replace('@', '')}" target="_blank">${userData.instagram}</a>
                        </div>`;
                }
                if (userData.contact_email) {
                    socialLinksHTML += `
                        <div class="social-link-item">
                            <i data-lucide="mail"></i>
                            <a href__="mailto:${userData.contact_email}">${userData.contact_email}</a>
                        </div>`;
                }
                
                socialLinksContainer.innerHTML = socialLinksHTML;

                const userArticles = [...allArticles.filter(a => a.user_id === userId), ...displayedDefaultArticles.filter(a => isDefault)];
                const totalLikes = userArticles.reduce((sum, a) => sum + (a.likes || 0), 0);
                const totalViews = userArticles.reduce((sum, a) => sum + (a.views || 0), 0);

                document.getElementById('profilePosts').textContent = userArticles.length;
                document.getElementById('profileTotalLikes').textContent = formatNumber(totalLikes);
                document.getElementById('profileTotalViews').textContent = formatNumber(totalViews);

                const userArticlesContainer = document.getElementById('userArticles');
                if (userArticles.length > 0) {
                    userArticlesContainer.innerHTML = `
                        <h3 style="font-weight: 600; margin-bottom: 1rem; color: var(--text-primary);">
                            <i data-lucide="file-text" style="width: 18px; height: 18px; display: inline; vertical-align: middle;"></i>
                            Posts (${userArticles.length})
                        </h3>
                        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                            ${userArticles.slice(0, 5).map(article => `
                                <div style="padding: 0.75rem; background: var(--bg-secondary); border-radius: 0.5rem; cursor: pointer; transition: all 0.2s;" onclick="closeProfileModal(); showArticle('${article.id}');">
                                    <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">${article.title}</div>
                                    <div style="font-size: 0.75rem; color: var(--text-secondary);">
                                        <span class="category-badge ${getCategoryClass(article.category)}" style="font-size: 0.625rem; padding: 0.125rem 0.5rem;">${article.category}</span>
                                        <span style="margin-left: 0.5rem;">
                                            <i data-lucide="eye" style="width: 12px; height: 12px; display: inline; vertical-align: middle;"></i>
                                            ${formatNumber(article.views || 0)}
                                        </span>
                                        <span style="margin-left: 0.5rem;">
                                            <i data-lucide="heart" style="width: 12px; height: 12px; display: inline; vertical-align: middle;"></i>
                                            ${formatNumber(article.likes || 0)}
                                        </span>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    `;
                } else {
                    userArticlesContainer.innerHTML = '<p style="color: var(--text-secondary); font-size: 0.875rem;">No posts yet</p>';
                }

                const isOwnProfile = userId === currentUser?.id;
                document.getElementById('editProfileBtn').style.display = isOwnProfile && !isDefault ? 'block' : 'none';
                document.getElementById('logoutBtn').style.display = isOwnProfile && !isDefault ? 'block' : 'none';

                document.getElementById('profileModal').classList.add('active');
                document.getElementById('viewProfile').style.display = 'block';
                document.getElementById('editProfile').style.display = 'none';
                document.body.style.overflow = 'hidden';
                lucide.createIcons();
            }

            async function incrementViews(articleId) {
                if (viewedArticles.includes(articleId)) return;
                
                viewedArticles.push(articleId);
                localStorage.setItem('streamxViewedArticles', JSON.stringify(viewedArticles));

                const article = displayedDefaultArticles.find(a => a.id === articleId);
                if (article && article.isDefault) {
                    article.views = (article.views || 0) + 1;
                    renderArticles();
                    return;
                }

                const articleRef = doc(window.db, 'articles', articleId);
                const articleDoc = await getDoc(articleRef);
                if (articleDoc.exists()) {
                    const currentViews = articleDoc.data().views || 0;
                    await updateDoc(articleRef, { views: currentViews + 1 });
                }
            }

            async function toggleLike(articleId) {
                if (!currentUser) {
                    showToast('Please login to like posts!', 'error');
                    openAuthModal();
                    return;
                }

                const article = displayedDefaultArticles.find(a => a.id === articleId);
                const isLiked = likedArticles[articleId] === true;

                if (article && article.isDefault) {
                    if (isLiked) {
                        delete likedArticles[articleId];
                        article.likes = Math.max(0, (article.likes || 0) - 1);
                        article.liked_by = (article.liked_by || []).filter(uid => uid !== currentUser.id);
                    } else {
                        likedArticles[articleId] = true;
                        article.likes = (article.likes || 0) + 1;
                        if (!article.liked_by) article.liked_by = [];
                        article.liked_by.push(currentUser.id);
                    }
                    localStorage.setItem('streamxLikedArticles', JSON.stringify(likedArticles));
                    renderArticles();
                    return;
                }

                const articleRef = doc(window.db, 'articles', articleId);
                const articleDoc = await getDoc(articleRef);
                if (!articleDoc.exists()) return;
                
                const articleData = articleDoc.data();
                const currentLikes = articleData.likes || 0;
                const likedBy = articleData.liked_by || [];

                if (isLiked) {
                    delete likedArticles[articleId];
                    const updatedLikedBy = likedBy.filter(uid => uid !== currentUser.id);
                    await updateDoc(articleRef, { 
                        likes: Math.max(0, currentLikes - 1),
                        liked_by: updatedLikedBy
                    });
                } else {
                    likedArticles[articleId] = true;
                    likedBy.push(currentUser.id);
                    await updateDoc(articleRef, { 
                        likes: currentLikes + 1,
                        liked_by: likedBy
                    });
                }

                localStorage.setItem('streamxLikedArticles', JSON.stringify(likedArticles));
            }

            function formatNumber(num) {
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
                return num.toString();
            }

            function generateRandomViews() {
                return Math.floor(Math.random() * (224211 - 5000 + 1)) + 5000;
            }

            function updateGradient() {
                const randomIndex = Math.floor(Math.random() * gradients.length);
                const gradient = gradients[randomIndex];
                
                document.documentElement.style.setProperty('--gradient-1-from', gradient.from);
                document.documentElement.style.setProperty('--gradient-1-to', gradient.to);
                
                document.querySelectorAll('.logo-gradient, #heroGradient').forEach(el => {
                    el.style.background = `linear-gradient(135deg, ${gradient.from} 0%, ${gradient.to} 100%)`;
                    el.style.webkitBackgroundClip = 'text';
                    el.style.webkitTextFillColor = 'transparent';
                    el.style.backgroundClip = 'text';
                });

                document.querySelectorAll('.icon-btn').forEach(btn => {
                    if (!btn.querySelector('img') && !btn.querySelector('div[style*="background"]')) {
                        btn.style.background = `linear-gradient(135deg, ${gradient.from} 0%, ${gradient.to} 100%)`;
                    }
                });
            }

            function showToast(message, type = 'success') {
                const toast = document.getElementById('toast');
                toast.textContent = message;
                toast.className = `toast show ${type}`;
                setTimeout(() => {
                    toast.className = 'toast';
                }, 3500);
            }

            function formatDate(dateString) {
                const date = new Date(dateString);
                const options = { year: 'numeric', month: 'long', day: 'numeric' };
                return date.toLocaleDateString('en-US', options);
            }

            function getCategoryClass(category) {
                const classes = {
                    'Tech': 'badge-tech',
                    'Gaming': 'badge-gaming',
                    'Entertainment': 'badge-entertainment',
                    'Sports': 'badge-sports',
                    'Business': 'badge-business',
                    'Science': 'badge-science',
                    'Breaking News': 'badge-breaking',
                    'Fun': 'badge-fun'
                };
                return classes[category] || 'badge-tech';
            }

            function getArticleImages(article) {
                if (article.images && Array.isArray(article.images) && article.images.length > 0) {
                    return article.images;
                } else if (article.image_url) {
                    return [article.image_url];
                }
                return ['https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=800&q=80'];
            }

            function openLightbox(images, index) {
                lightboxImages = images;
                currentLightboxIndex = index;
                updateLightboxImage();
                document.getElementById('lightbox').classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            function closeLightbox() {
                document.getElementById('lightbox').classList.remove('active');
                document.body.style.overflow = '';
            }

            function navigateLightbox(direction) {
                currentLightboxIndex = (currentLightboxIndex + direction + lightboxImages.length) % lightboxImages.length;
                updateLightboxImage();
            }

            function updateLightboxImage() {
                document.getElementById('lightboxImage').src = lightboxImages[currentLightboxIndex];
                document.getElementById('lightboxCounter').textContent = 
                    `${currentLightboxIndex + 1} / ${lightboxImages.length}`;
                lucide.createIcons();
            }

            function renderImageGallery(images) {
                if (!images || images.length <= 1) return '';
                
                return `
                    <div class="image-gallery">
                        ${images.map((img, index) => `
                            <div class="gallery-image" onclick='openLightbox(${JSON.stringify(images)}, ${index})'>
                                <img src="${img}" alt="Image ${index + 1}">
                            </div>
                        `).join('')}
                    </div>
                `;
            }

            function renderFeaturedArticle(article) {
                if (!article) return '';
                
                const images = getArticleImages(article);
                const mainImage = images[0];
                const isLiked = likedArticles[article.id] === true;
                const avatarHTML = article.profile_picture 
                    ? `<img src="${article.profile_picture}" alt="${article.author}">` 
                    : article.author ? article.author[0] : 'S';
                
                return `
                    <div class="section-header" style="margin-top: 0;">
                        <span>Featured Story</span>
                        <span class="section-line"></span>
                    </div>
                    <div class="featured-article">
                        <div class="featured-card" onclick="showArticle('${article.id}')">
                            <div class="post-header">
                                <div class="post-avatar" onclick="event.stopPropagation(); viewUserProfile('${article.user_id}')" style="cursor: pointer;">
                                    ${avatarHTML}
                                </div>
                                <div class="post-author-info">
                                    <div class="post-author" onclick="event.stopPropagation(); viewUserProfile('${article.user_id}')" style="cursor: pointer;">${article.author || 'StreamX News'}</div>
                                    <div class="article-date">
                                        <i data-lucide="calendar"></i>
                                        ${formatDate(article.created_date)}
                                    </div>
                                </div>
                                <div class="category-badge ${getCategoryClass(article.category)}">
                                    ${article.category}
                                </div>
                            </div>
                            <div class="post-content-text">
                                <h2 class="featured-title">${article.title}</h2>
                                <p class="featured-summary clickable-content">${makeLinksClickable(article.summary)}</p>
                            </div>
                            <div class="featured-image">
                                <img src="${mainImage}" alt="${article.title}">
                            </div>
                            <div class="article-stats">
                                <div class="stat-item">
                                    <i data-lucide="eye"></i>
                                    <span>${formatNumber(article.views || 0)}</span>
                                </div>
                                <div class="stat-item like-btn ${isLiked ? 'liked' : ''}" onclick="event.stopPropagation(); toggleLike('${article.id}')">
                                    <i data-lucide="heart"></i>
                                    <span>${formatNumber(article.likes || 0)}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }

            function renderArticleCard(article, index) {
                const images = getArticleImages(article);
                const mainImage = images[0];
                const isLiked = likedArticles[article.id] === true;
                const avatarHTML = article.profile_picture 
                    ? `<img src="${article.profile_picture}" alt="${article.author}">` 
                    : article.author ? article.author[0] : 'S';
                    
                return `
                    <div class="article-card" onclick="showArticle('${article.id}')" style="animation-delay: ${index * 0.05}s">
                        <div class="post-header">
                            <div class="post-avatar" onclick="event.stopPropagation(); viewUserProfile('${article.user_id}')" style="cursor: pointer;">
                                ${avatarHTML}
                            </div>
                            <div class="post-author-info">
                                <div class="post-author" onclick="event.stopPropagation(); viewUserProfile('${article.user_id}')" style="cursor: pointer;">${article.author || 'StreamX News'}</div>
                                <div class="article-date">
                                    <i data-lucide="calendar"></i>
                                    ${formatDate(article.created_date)}
                                </div>
                            </div>
                            <div class="category-badge ${getCategoryClass(article.category)}">
                                ${article.category}
                            </div>
                        </div>
                        <div class="article-content">
                            <h3 class="article-title">${article.title}</h3>
                            <p class="article-summary clickable-content">${makeLinksClickable(article.summary)}</p>
                        </div>
                        <div class="article-image">
                            <img src="${mainImage}" alt="${article.title}">
                        </div>
                        <div class="article-stats">
                            <div class="stat-item">
                                <i data-lucide="eye"></i>
                                <span>${formatNumber(article.views || 0)}</span>
                            </div>
                            <div class="stat-item like-btn ${isLiked ? 'liked' : ''}" onclick="event.stopPropagation(); toggleLike('${article.id}')">
                                <i data-lucide="heart"></i>
                                <span>${formatNumber(article.likes || 0)}</span>
                            </div>
                        </div>
                    </div>
                `;
            }

            function renderArticles() {
                const combinedArticles = [...displayedDefaultArticles, ...allArticles];
                
                let filtered = combinedArticles.filter(article => {
                    const matchesCategory = currentCategory === 'All' || article.category === currentCategory;
                    const matchesSearch = !searchQuery || 
                        article.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
                        article.summary.toLowerCase().includes(searchQuery.toLowerCase()) ||
                        (article.content && article.content.toLowerCase().includes(searchQuery.toLowerCase()));
                    return matchesCategory && matchesSearch;
                });

                filtered.sort((a, b) => new Date(b.created_date) - new Date(a.created_date));

                const featuredArticle = filtered.find(a => a.featured);
                const regularArticles = filtered.filter(a => !a.featured);

                let html = '';

                if (featuredArticle && currentCategory === 'All' && !searchQuery) {
                    html += renderFeaturedArticle(featuredArticle);
                }

                if (regularArticles.length > 0) {
                    html += `
                        <div class="section-header" style="margin-top: ${featuredArticle && currentCategory === 'All' && !searchQuery ? '3rem' : '0'};">
                            <span>${searchQuery ? 'Search Results' : currentCategory === 'All' ? 'Latest News' : currentCategory}</span>
                            <span>(${regularArticles.length})</span>
                            <span class="section-line"></span>
                        </div>
                        <div class="articles-grid">
                            ${regularArticles.map((article, index) => renderArticleCard(article, index)).join('')}
                        </div>
                    `;
                } else if (!featuredArticle) {
                    html += `
                        <div class="empty-state">
                            <p class="empty-title">No articles found</p>
                            <p class="empty-description">Try adjusting your search or category filter</p>
                        </div>
                    `;
                }

                document.getElementById('allArticlesContainer').innerHTML = html;
                lucide.createIcons();
            }

            function showArticle(articleId) {
                let article = displayedDefaultArticles.find(a => a.id === articleId);
                if (!article) {
                    article = allArticles.find(a => a.id === articleId);
                }
                if (!article) return;

                incrementViews(articleId);

                const homePage = document.getElementById('homePage');
                const articlePage = document.getElementById('articlePage');

                homePage.style.display = 'none';
                articlePage.style.display = 'block';

                const combinedArticles = [...displayedDefaultArticles, ...allArticles];
                const related = combinedArticles
                    .filter(a => a.category === article.category && a.id !== article.id)
                    .slice(0, 3);

                const images = getArticleImages(article);
                const mainImage = images[0];
                const isLiked = likedArticles[article.id] === true;
                const avatarHTML = article.profile_picture 
                    ? `<img src="${article.profile_picture}" alt="${article.author}">` 
                    : article.author ? article.author[0] : 'S';

                articlePage.innerHTML = `
                    <button class="back-btn" onclick="showHome()">
                        <i data-lucide="arrow-left"></i>
                        <span>Back to News</span>
                    </button>

                    <article style="background: var(--bg-card); border-radius: 0.75rem; border: 1px solid var(--border-color); overflow: hidden; box-shadow: var(--shadow-md);">
                        <div class="post-header">
                            <div class="post-avatar" onclick="viewUserProfile('${article.user_id}')" style="cursor: pointer;">
                                ${avatarHTML}
                            </div>
                            <div class="post-author-info">
                                <div class="post-author" onclick="viewUserProfile('${article.user_id}')" style="cursor: pointer;">${article.author || 'StreamX News'}</div>
                                <div class="article-date">
                                    <i data-lucide="calendar"></i>
                                    ${formatDate(article.created_date)}
                                </div>
                            </div>
                            <div class="category-badge ${getCategoryClass(article.category)}">
                                ${article.category}
                            </div>
                        </div>

                        <div style="padding: 2rem 1.5rem;">
                            <h1>${article.title}</h1>
                            <p style="font-size: 1.1875rem; color: var(--text-secondary); line-height: 1.7; margin-bottom: 2rem;" class="clickable-content">${makeLinksClickable(article.summary)}</p>
                            
                            <div class="article-stats" style="justify-content: flex-start; gap: 2rem; border-top: none; padding: 0 0 1rem 0;">
                                <div class="stat-item" style="font-size: 1.1rem;">
                                    <i data-lucide="eye"></i>
                                    <span>${formatNumber(article.views || 0)} views</span>
                                </div>
                                <div class="stat-item like-btn ${isLiked ? 'liked' : ''}" onclick="toggleLike('${article.id}')" style="font-size: 1.1rem; cursor: pointer;">
                                    <i data-lucide="heart"></i>
                                    <span>${formatNumber(article.likes || 0)} likes</span>
                                </div>
                            </div>
                        </div>

                        <img src="${mainImage}" alt="${article.title}" onclick='openLightbox(${JSON.stringify(images)}, 0)' style="width: 100%; height: auto; cursor: pointer; display: block;">
                        
                        ${renderImageGallery(images)}

                        <div style="padding: 2rem 1.5rem;" class="clickable-content">
                            ${formatMarkdown(makeLinksClickable(article.content || article.summary))}
                        </div>
                    </article>

                    ${related.length > 0 ? `
                        <div style="margin-top: 3rem;">
                            <div class="section-header">
                                <span>Related Stories</span>
                                <span class="section-line"></span>
                            </div>
                            <div class="articles-grid">
                                ${related.map((r, i) => renderArticleCard(r, i)).join('')}
                            </div>
                        </div>
                    ` : ''}
                `;

                lucide.createIcons();
                window.scrollTo(0, 0);
            }

            function showHome() {
                document.getElementById('homePage').style.display = 'block';
                document.getElementById('articlePage').style.display = 'none';
                window.scrollTo(0, 0);
            }

            function formatMarkdown(text) {
                if (!text) return '';
                
                let html = text
                    .replace(/^### (.*$)/gim, '<h3>$1</h3>')
                    .replace(/^## (.*$)/gim, '<h2>$1</h2>')
                    .replace(/^# (.*$)/gim, '<h1>$1</h1>')
                    .replace(/\*\*(.*?)\*\*/gim, '<strong>$1</strong>')
                    .replace(/\*(.*?)\*/gim, '<em>$1</em>')
                    .replace(/\n\n/gim, '</p><p>')
                    .replace(/^\- (.+)$/gim, '<li>$1</li>')
                    .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>');
                
                return `<p>${html}</p>`;
            }

            function openPublicPostForm() {
                if (!currentUser) {
                    document.getElementById('postLoginRequired').style.display = 'block';
                    document.getElementById('publicPostFormElement').style.display = 'none';
                } else {
                    document.getElementById('postLoginRequired').style.display = 'none';
                    document.getElementById('publicPostFormElement').style.display = 'block';
                }
                document.getElementById('publicPostForm').classList.add('active');
                document.body.style.overflow = 'hidden';
                lucide.createIcons();
            }

            function closePublicPostForm() {
                document.getElementById('publicPostForm').classList.remove('active');
                document.body.style.overflow = '';
                document.getElementById('publicPostFormElement').reset();
                publicUploadedImages = [];
                updatePublicImagePreviews();
            }

            function handlePublicImageUpload(files) {
                const fileArray = Array.from(files);
                const maxFiles = 5;
                
                if (publicUploadedImages.length + fileArray.length > maxFiles) {
                    showToast(`Maximum ${maxFiles} images allowed!`, 'error');
                    return;
                }

                const uploadPromises = fileArray.map(file => uploadPublicImage(file));
                
                document.getElementById('publicUploadProgress').style.display = 'block';
                document.getElementById('publicSubmitBtn').disabled = true;
                
                Promise.all(uploadPromises)
                    .then(() => {
                        document.getElementById('publicUploadProgress').style.display = 'none';
                        document.getElementById('publicSubmitBtn').disabled = false;
                        showToast('Images uploaded successfully!', 'success');
                        updatePublicImagePreviews();
                    })
                    .catch(error => {
                        document.getElementById('publicUploadProgress').style.display = 'none';
                        document.getElementById('publicSubmitBtn').disabled = false;
                        showToast('Upload failed: ' + error.message, 'error');
                    });
            }

            function uploadPublicImage(file) {
                return new Promise((resolve, reject) => {
                    if (file.size > 5 * 1024 * 1024) {
                        reject(new Error('File size exceeds 5MB'));
                        return;
                    }

                    const reader = new FileReader();
                    
                    reader.onloadstart = () => {
                        document.getElementById('publicUploadProgressBar').style.width = '0%';
                    };
                    
                    reader.onprogress = (event) => {
                        if (event.lengthComputable) {
                            const progress = (event.loaded / event.total) * 100;
                            document.getElementById('publicUploadProgressBar').style.width = progress + '%';
                        }
                    };
                    
                    reader.onload = (e) => {
                        const base64String = e.target.result;
                        publicUploadedImages.push(base64String);
                        document.getElementById('publicUploadProgressBar').style.width = '100%';
                        resolve(base64String);
                    };
                    
                    reader.onerror = (error) => {
                        reject(error);
                    };
                    
                    reader.readAsDataURL(file);
                });
            }

            function updatePublicImagePreviews() {
                const container = document.getElementById('publicPreviewImages');
                container.innerHTML = publicUploadedImages.map((url, index) => `
                    <div class="preview-item">
                        <img src="${url}" alt="Preview ${index + 1}">
                        <button class="preview-remove" onclick="removePublicImage(${index}); event.stopPropagation();">
                            <i data-lucide="x"></i>
                        </button>
                    </div>
                `).join('');
                lucide.createIcons();
            }

            function removePublicImage(index) {
                publicUploadedImages.splice(index, 1);
                updatePublicImagePreviews();
            }

            function handleImageUpload(files) {
                const fileArray = Array.from(files);
                const maxFiles = 5;
                
                if (uploadedImages.length + fileArray.length > maxFiles) {
                    showToast(`Maximum ${maxFiles} images allowed!`, 'error');
                    return;
                }

                const uploadPromises = fileArray.map(file => uploadImage(file));
                
                document.getElementById('uploadProgress').style.display = 'block';
                document.getElementById('submitBtn').disabled = true;
                
                Promise.all(uploadPromises)
                    .then(() => {
                        document.getElementById('uploadProgress').style.display = 'none';
                        document.getElementById('submitBtn').disabled = false;
                        showToast('Images uploaded successfully!', 'success');
                        updateImagePreviews();
                    })
                    .catch(error => {
                        document.getElementById('uploadProgress').style.display = 'none';
                        document.getElementById('submitBtn').disabled = false;
                        showToast('Upload failed: ' + error.message, 'error');
                    });
            }

            function uploadImage(file) {
                return new Promise((resolve, reject) => {
                    if (file.size > 5 * 1024 * 1024) {
                        reject(new Error('File size exceeds 5MB'));
                        return;
                    }

                    const reader = new FileReader();
                    
                    reader.onloadstart = () => {
                        document.getElementById('uploadProgressBar').style.width = '0%';
                    };
                    
                    reader.onprogress = (event) => {
                        if (event.lengthComputable) {
                            const progress = (event.loaded / event.total) * 100;
                            document.getElementById('uploadProgressBar').style.width = progress + '%';
                        }
                    };
                    
                    reader.onload = (e) => {
                        const base64String = e.target.result;
                        uploadedImages.push(base64String);
                        document.getElementById('uploadProgressBar').style.width = '100%';
                        resolve(base64String);
                    };
                    
                    reader.onerror = (error) => {
                        reject(error);
                    };
                    
                    reader.readAsDataURL(file);
                });
            }

            function updateImagePreviews() {
                const container = document.getElementById('previewImages');
                container.innerHTML = uploadedImages.map((url, index) => `
                    <div class="preview-item">
                        <img src="${url}" alt="Preview ${index + 1}">
                        <button class="preview-remove" onclick="removeImage(${index}); event.stopPropagation();">
                            <i data-lucide="x"></i>
                        </button>
                    </div>
                `).join('');
                lucide.createIcons();
            }

            function removeImage(index) {
                uploadedImages.splice(index, 1);
                updateImagePreviews();
            }

            function openAdminPanel() {
                document.getElementById('adminPanel').classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            function closeAdminPanel() {
                document.getElementById('adminPanel').classList.remove('active');
                document.getElementById('adminLogin').style.display = 'flex';
                document.getElementById('adminContent').style.display = 'none';
                document.getElementById('adminPassword').value = '';
                document.body.style.overflow = '';
                hideArticleForm();
            }

            function showAdminContent() {
                document.getElementById('adminLogin').style.display = 'none';
                document.getElementById('adminContent').style.display = 'block';
                loadAdminArticles();
            }

            function showArticleForm() {
                document.getElementById('articleForm').style.display = 'block';
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            function hideArticleForm() {
                document.getElementById('articleForm').style.display = 'none';
                document.getElementById('articleFormElement').reset();
                editingArticleId = null;
                uploadedImages = [];
                updateImagePreviews();
                document.getElementById('formTitle').textContent = 'Create New Article';
                document.getElementById('submitBtnText').textContent = 'Publish Article';
            }

            function loadAdminArticles() {
                const list = document.getElementById('adminArticlesList');
                document.getElementById('adminArticleCount').textContent = allArticles.length;

                if (allArticles.length === 0) {
                    list.innerHTML = `
                        <div class="empty-state">
                            <p class="empty-title">No articles yet</p>
                            <p class="empty-description">Create your first article to get started</p>
                        </div>
                    `;
                    return;
                }

                list.innerHTML = allArticles.map(article => {
                    const images = getArticleImages(article);
                    return `
                    <div class="article-list-item">
                        <div class="article-list-content">
                            <div class="article-list-info">
                                <div class="article-list-title">
                                    <span>${article.title}</span>
                                    ${article.featured ? `
                                        <span class="category-badge" style="background: rgba(245, 158, 11, 0.1); color: #f59e0b; border-color: rgba(245, 158, 11, 0.3);">
                                            Featured
                                        </span>
                                    ` : ''}
                                </div>
                                <p class="article-list-summary">${article.summary}</p>
                                <div class="article-list-meta">
                                    <div class="category-badge ${getCategoryClass(article.category)}">
                                        ${article.category}
                                    </div>
                                    ${article.author ? `<span>By ${article.author}</span>` : ''}
                                    <span>${formatDate(article.created_date)}</span>
                                    <span>${images.length} image(s)</span>
                                    <span><i data-lucide="eye" style="width: 14px; height: 14px;"></i> ${formatNumber(article.views || 0)}</span>
                                    <span><i data-lucide="heart" style="width: 14px; height: 14px;"></i> ${formatNumber(article.likes || 0)}</span>
                                </div>
                            </div>
                            <div class="article-list-actions">
                                <button class="btn-icon" onclick="editArticle('${article.id}')" title="Edit">
                                    <i data-lucide="edit"></i>
                                </button>
                                <button class="btn-icon" onclick="deleteArticle('${article.id}')" title="Delete" style="color: #ef4444;">
                                    <i data-lucide="trash-2"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `}).join('');

                lucide.createIcons();
            }

            function editArticle(articleId) {
                const article = allArticles.find(a => a.id === articleId);
                if (!article) return;

                editingArticleId = articleId;
                document.getElementById('formTitle').textContent = 'Edit Article';
                document.getElementById('submitBtnText').textContent = 'Update Article';
                
                document.getElementById('articleTitle').value = article.title;
                document.getElementById('articleSummary').value = article.summary;
                document.getElementById('articleContent').value = article.content || '';
                document.getElementById('articleCategory').value = article.category;
                document.getElementById('articleAuthor').value = article.author || '';
                document.getElementById('articleFeatured').checked = article.featured || false;
                
                uploadedImages = getArticleImages(article);
                updateImagePreviews();

                showArticleForm();
            }

            async function deleteArticle(articleId) {
                if (!confirm('Are you sure you want to delete this article? This action cannot be undone.')) return;

                try {
                    await deleteDoc(doc(window.db, 'articles', articleId));
                    showToast('Article deleted successfully!', 'success');
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            }

            async function deleteOldArticles() {
                const sevenDaysAgo = Date.now() - (7 * 24 * 60 * 60 * 1000);
                let deletedCount = 0;
                
                const articlesSnapshot = await getDocs(collection(window.db, 'articles'));
                const deletePromises = [];
                
                articlesSnapshot.forEach(doc => {
                    const article = doc.data();
                    const createdDate = new Date(article.created_date).getTime();
                    
                    if (createdDate < sevenDaysAgo) {
                        deletePromises.push(
                            deleteDoc(doc.ref).then(() => {
                                deletedCount++;
                            })
                        );
                    }
                });
                
                await Promise.all(deletePromises);
                
                if (deletedCount > 0 && currentUser) {
                    deletedArticlesCount = deletedCount;
                    updateAuthButton();
                    showToast(`${deletedCount} old article(s) were automatically removed (7+ days old)`, 'info');
                }
            }

            document.getElementById('loginForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = document.getElementById('loginEmail').value;
                const password = document.getElementById('loginPassword').value;

                try {
                    await signInWithEmailAndPassword(window.auth, email, password);
                    closeAuthModal();
                    showToast('Welcome back!', 'success');
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            document.getElementById('registerForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const name = document.getElementById('regName').value;
                const email = document.getElementById('regEmail').value;
                const password = document.getElementById('regPassword').value;

                try {
                    const userCredential = await createUserWithEmailAndPassword(window.auth, email, password);
                    const user = userCredential.user;
                    
                    await addDoc(collection(window.db, 'users'), {
                        userId: user.uid,
                        name,
                        email,
                        bio: '',
                        profile_picture: null,
                        website_url: '',
                        whatsapp: '',
                        facebook: '',
                        instagram: '',
                        contact_email: '',
                        created_date: new Date().toISOString()
                    });
                    
                    closeAuthModal();
                    showToast('Account created successfully!', 'success');
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            document.getElementById('editProfileForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const name = document.getElementById('editName').value;
                const bio = document.getElementById('editBio').value;
                const website_url = document.getElementById('editWebsite').value;
                const whatsapp = document.getElementById('editWhatsapp').value;
                const facebook = document.getElementById('editFacebook').value;
                const instagram = document.getElementById('editInstagram').value;
                const contact_email = document.getElementById('editContactEmail').value;

                const updateData = {
                    name,
                    bio,
                    website_url,
                    whatsapp,
                    facebook,
                    instagram,
                    contact_email
                };

                if (currentProfilePicture) {
                    updateData.profile_picture = currentProfilePicture;
                }

                try {
                    const usersSnapshot = await getDocs(collection(window.db, 'users'));
                    let userDocId = null;
                    usersSnapshot.forEach(doc => {
                        if (doc.id === currentUser.id || doc.data().userId === currentUser.id) {
                            userDocId = doc.id;
                        }
                    });

                    if (userDocId) {
                        await updateDoc(doc(window.db, 'users', userDocId), updateData);
                        
                        Object.assign(currentUser, updateData);
                        
                        const accountIndex = savedAccounts.findIndex(a => a.id === currentUser.id);
                        if (accountIndex !== -1) {
                            Object.assign(savedAccounts[accountIndex], updateData);
                            localStorage.setItem('streamxAccounts', JSON.stringify(savedAccounts));
                        }
                        
                        updateAuthButton();
                        showToast('Profile updated!', 'success');
                        closeProfileModal();
                        
                        const articlesSnapshot = await getDocs(collection(window.db, 'articles'));
                        const updatePromises = [];
                        articlesSnapshot.forEach(articleDoc => {
                            const article = articleDoc.data();
                            if (article.user_id === currentUser.id) {
                                updatePromises.push(
                                    updateDoc(doc(window.db, 'articles', articleDoc.id), {
                                        author: name,
                                        profile_picture: currentProfilePicture || article.profile_picture
                                    })
                                );
                            }
                        });
                        await Promise.all(updatePromises);
                    }
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            document.getElementById('adminLoginForm').addEventListener('submit', (e) => {
                e.preventDefault();
                const password = document.getElementById('adminPassword').value;
                if (password === 'VNAXXTTM') {
                    showAdminContent();
                    showToast('Welcome to Admin Panel!', 'success');
                } else {
                    showToast('Invalid password!', 'error');
                }
            });

            document.getElementById('newArticleBtn').addEventListener('click', showArticleForm);
            document.getElementById('closeAdminBtn').addEventListener('click', closeAdminPanel);
            document.getElementById('cancelFormBtn').addEventListener('click', hideArticleForm);

            const uploadContainer = document.getElementById('imageUploadContainer');
            const uploadInput = document.getElementById('imageUploadInput');

            uploadContainer.addEventListener('click', () => uploadInput.click());
            uploadInput.addEventListener('change', (e) => handleImageUpload(e.target.files));

            uploadContainer.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadContainer.classList.add('dragging');
            });

            uploadContainer.addEventListener('dragleave', () => {
                uploadContainer.classList.remove('dragging');
            });

            uploadContainer.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadContainer.classList.remove('dragging');
                handleImageUpload(e.dataTransfer.files);
            });

            const publicUploadContainer = document.getElementById('publicImageUploadContainer');
            const publicUploadInput = document.getElementById('publicImageUploadInput');

            publicUploadContainer.addEventListener('click', () => publicUploadInput.click());
            publicUploadInput.addEventListener('change', (e) => handlePublicImageUpload(e.target.files));

            publicUploadContainer.addEventListener('dragover', (e) => {
                e.preventDefault();
                publicUploadContainer.classList.add('dragging');
            });

            publicUploadContainer.addEventListener('dragleave', () => {
                publicUploadContainer.classList.remove('dragging');
            });

            publicUploadContainer.addEventListener('drop', (e) => {
                e.preventDefault();
                publicUploadContainer.classList.remove('dragging');
                handlePublicImageUpload(e.dataTransfer.files);
            });

            document.getElementById('publicPostFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();

                if (!currentUser) {
                    showToast('Please login first!', 'error');
                    return;
                }

                const articleData = {
                    title: document.getElementById('publicTitle').value,
                    summary: document.getElementById('publicSummary').value,
                    content: document.getElementById('publicContent').value,
                    category: document.getElementById('publicCategory').value,
                    author: currentUser.name,
                    profile_picture: currentUser.profile_picture || null,
                    user_id: currentUser.id,
                    images: publicUploadedImages.length > 0 ? publicUploadedImages : ['https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=800&q=80'],
                    featured: false,
                    views: generateRandomViews(),
                    likes: 0,
                    liked_by: [],
                    created_date: new Date().toISOString()
                };

                try {
                    await addDoc(collection(window.db, 'articles'), articleData);
                    showToast('Post published successfully!', 'success');
                    closePublicPostForm();
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            document.getElementById('articleFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();

                const articleData = {
                    title: document.getElementById('articleTitle').value,
                    summary: document.getElementById('articleSummary').value,
                    content: document.getElementById('articleContent').value,
                    category: document.getElementById('articleCategory').value,
                    author: document.getElementById('articleAuthor').value || 'Admin',
                    profile_picture: null,
                    user_id: 'admin',
                    images: uploadedImages.length > 0 ? uploadedImages : ['https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=800&q=80'],
                    featured: document.getElementById('articleFeatured').checked,
                    views: generateRandomViews(),
                    likes: 0,
                    liked_by: [],
                    created_date: new Date().toISOString()
                };

                try {
                    if (editingArticleId) {
                        await updateDoc(doc(window.db, 'articles', editingArticleId), articleData);
                        showToast('Article updated successfully!', 'success');
                    } else {
                        await addDoc(collection(window.db, 'articles'), articleData);
                        showToast('Article published successfully!', 'success');
                    }
                    hideArticleForm();
                } catch (error) {
                    showToast('Error: ' + error.message, 'error');
                }
            });

            document.getElementById('searchInput').addEventListener('input', (e) => {
                searchQuery = e.target.value;
                renderArticles();
            });

            document.getElementById('categoryFilters').addEventListener('click', (e) => {
                const btn = e.target.closest('.category-btn');
                if (!btn) return;

                document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentCategory = btn.dataset.category;
                renderArticles();
            });

            document.getElementById('logoContainer').addEventListener('click', () => {
                clickCount++;
                
                if (clickCount === 1) {
                    clickTimer = setTimeout(() => {
                        clickCount = 0;
                    }, 500);
                } else if (clickCount === 2) {
                    clearTimeout(clickTimer);
                    clickCount = 0;
                    openAdminPanel();
                }
            });

            document.getElementById('lightbox').addEventListener('click', (e) => {
                if (e.target.id === 'lightbox') {
                    closeLightbox();
                }
            });

            document.getElementById('publicPostForm').addEventListener('click', (e) => {
                if (e.target.id === 'publicPostForm') {
                    closePublicPostForm();
                }
            });

            document.getElementById('authModal').addEventListener('click', (e) => {
                if (e.target.id === 'authModal') {
                    closeAuthModal();
                }
            });

            document.getElementById('accountSwitcher').addEventListener('click', (e) => {
                if (e.target.id === 'accountSwitcher') {
                    closeAccountSwitcher();
                }
            });

            document.addEventListener('keydown', (e) => {
                const lightbox = document.getElementById('lightbox');
                if (lightbox.classList.contains('active')) {
                    if (e.key === 'ArrowLeft') navigateLightbox(-1);
                    if (e.key === 'ArrowRight') navigateLightbox(1);
                    if (e.key === 'Escape') closeLightbox();
                }

                const publicForm = document.getElementById('publicPostForm');
                if (publicForm.classList.contains('active') && e.key === 'Escape') {
                    closePublicPostForm();
                }

                const authModal = document.getElementById('authModal');
                if (authModal.classList.contains('active') && e.key === 'Escape') {
                    closeAuthModal();
                }

                const accountSwitcher = document.getElementById('accountSwitcher');
                if (accountSwitcher.classList.contains('active') && e.key === 'Escape') {
                    closeAccountSwitcher();
                }
            });

            // Make functions globally available
            window.switchAccount = switchAccount;
            window.removeAccount = removeAccount;
            window.addNewAccount = addNewAccount;
            window.closeAccountSwitcher = closeAccountSwitcher;
            window.openAccountSwitcher = openAccountSwitcher;
            window.handleAuthButtonClick = handleAuthButtonClick;
            window.signInWithGoogle = signInWithGoogle;
            window.openAuthModal = openAuthModal;
            window.closeAuthModal = closeAuthModal;
            window.showLoginView = showLoginView;
            window.showRegisterView = showRegisterView;
            window.showForgotPassword = showForgotPassword;
            window.viewUserProfile = viewUserProfile;
            window.closeProfileModal = closeProfileModal;
            window.showEditProfile = showEditProfile;
            window.cancelEditProfile = cancelEditProfile;
            window.logout = logout;
            window.toggleLike = toggleLike;
            window.showArticle = showArticle;
            window.showHome = showHome;
            window.openPublicPostForm = openPublicPostForm;
            window.closePublicPostForm = closePublicPostForm;
            window.removePublicImage = removePublicImage;
            window.removeImage = removeImage;
            window.openAdminPanel = openAdminPanel;
            window.closeAdminPanel = closeAdminPanel;
            window.showArticleForm = showArticleForm;
            window.editArticle = editArticle;
            window.deleteArticle = deleteArticle;
            window.openLightbox = openLightbox;
            window.closeLightbox = closeLightbox;
            window.navigateLightbox = navigateLightbox;

            // Listen to Firestore articles collection
            onSnapshot(collection(window.db, 'articles'), (snapshot) => {
                allArticles = [];
                snapshot.forEach((doc) => {
                    allArticles.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                
                allArticles.sort((a, b) => new Date(b.created_date) - new Date(a.created_date));
                renderArticles();
                
                if (document.getElementById('adminContent').style.display === 'block') {
                    loadAdminArticles();
                }
            });

            document.getElementById('currentYear').textContent = new Date().getFullYear();
            updateGradient();
            updateAuthButton();
            renderArticles();
            lucide.createIcons();
            
            deleteOldArticles();
            setInterval(deleteOldArticles, 60 * 60 * 1000);
            
            setInterval(updateGradient, 180000);
            
            setInterval(() => {
                displayedDefaultArticles = shuffleArray(defaultArticles);
                renderArticles();
            }, 300000);

        }, 500000); // Wait 500ms for Firebase to initialize
    </script>
</body>
</html>
